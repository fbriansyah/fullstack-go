// ErrorForbiddenPage renders the 403 Forbidden error page
templ ErrorForbiddenPage() {
	@layouts.Base("Access Forbidden - Go Templ Template", ErrorForbiddenContent())
}

// ErrorForbiddenContent renders the content for 403 error page
templ ErrorForbiddenContent() {
	<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full space-y-8 text-center">
			<div>
				<div class="mx-auto h-32 w-32 text-red-600">
					<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
